
<h1>Players</h1>
<%# Table headers for when the table is compressed:%>
<style>
  @media
only screen and (max-width: 750px),
(min-device-width: 768px) and (max-device-width: 1024px)  {
  td:nth-of-type(1):before { content: "Name:"; }
  td:nth-of-type(2):before { content: "DOB:"; }
  td:nth-of-type(3):before { content: "Team:"; }
  td:nth-of-type(4):before { content: "Role:"; }
  td:nth-of-type(5):before { content: "Bat:"; }
  td:nth-of-type(6):before { content: "Bowl:"; }
  td:nth-of-type(7):before { content: "Dom:"; }
}
</style>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Team</th>
      <th>Role</th>
      <th>Battinghand</th>
      <th>Bowlingstyle</th>
      <th>Domesticteam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.DOB %></td>
        <td><%= player.team.name %></td>
        <td><%= player.role %></td>
        <td><%= player.battinghand %></td>
        <td><%= player.bowlingstyle %></td>
        <td><%= player.domesticteam %></td>
        <td><%= link_to 'Edit', edit_team_player_path(player.team, player) %></td>
        <td><%= link_to 'Destroy', team_player_path(player.team, player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
