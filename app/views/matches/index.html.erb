<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table class="center">
  <thead>
    <tr>
      <th>Date</th>
      <th>Home Team</th>
      <th>Home Score</th>
      <th>V</th>
      <th>Away Score</th>
      <th>Away Team</th>
      <th>Stadium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.hometeam.name %></td>
        <td></td>
        <td>V</td>
        <td></td>
        <td><%= match.awayteam.name %></td>
        <td><%= match.stadium %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="text-align:center"><%= link_to 'New Match', new_match_path %></p>
