<h1><%= @match.hometeam.name %> Innings </h1>
<table class="center">
  <thead>
    <tr>
      <th>Batsman</th>
      <th>How Out</th>
      <th>Runs</th>
      <th>Balls</th>
      <th>4s</th>
      <th>6s</th>
      <th>Strike Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @match.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.hometeam.name %></td>
        <td></td>
        <td>V</td>
        <td></td>
        <td><%= match.awayteam.name %></td>
        <td><%= match.stadium %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1><%= @match.awayteam.name %> Innings </h1>
<table class="center">
  <thead>
    <tr>
      <th>Date</th>
      <th>Home Team</th>
      <th>Home Score</th>
      <th>V</th>
      <th>Away Score</th>
      <th>Away Team</th>
      <th>Stadium</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.date %></td>
        <td><%= match.hometeam.name %></td>
        <td></td>
        <td>V</td>
        <td></td>
        <td><%= match.awayteam.name %></td>
        <td><%= match.stadium %></td>
        <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @match.date %>
</p>

<p>
  <strong>Hometeam:</strong>
  <%= @match.hometeam.name %>
</p>

<p>
  <strong>Awayteam:</strong>
  <%= @match.awayteam.name %>
</p>

<p>
  <strong>Stadium:</strong>
  <%= @match.stadium %>
</p>

