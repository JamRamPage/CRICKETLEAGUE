        <th><%= I18n.t('.matches.scorecard.no_balls') %></th>
        <th><%= I18n.t('.matches.scorecard.wides') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    </tbody>
  </table>
