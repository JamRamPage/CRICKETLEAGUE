<p id="notice"><%= notice %></p>

<h1><%= I18n.t('.teams.heading') %></h1>

<table class="center">
  <thead>
    <tr>
      <th><%= I18n.t('.teams.name') %></th>
      <th><%= I18n.t('.teams.played') %></th>
      <th><%= I18n.t('.teams.won') %></th>
      <th><%= I18n.t('.teams.drawn') %></th>
      <th><%= I18n.t('.teams.lost') %></th>
      <th><%= I18n.t('.teams.no_result') %></th>
      <th><%= I18n.t('.teams.points') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.played %></td>
        <td><%= team.won %></td>
        <td><%= team.drawn %></td>
        <td><%= team.lost %></td>
        <td><%= team.noresult %></td>
        <td><%= team.score %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p style="text-align:center"><%= link_to 'New Team', new_team_path %></p>
