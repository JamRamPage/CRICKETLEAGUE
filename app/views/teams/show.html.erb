<%# Table headers for when the table is compressed:%>
<style>
  @media
  only screen and (max-width: 750px),
  (min-device-width: 768px) and (max-device-width: 1024px)  {
  td.Team:nth-of-type(1):before { content: "Name:"; }
  td.Team:nth-of-type(2):before { content: "P:"; }
  td.Team:nth-of-type(3):before { content: "W:"; }
  td.Team:nth-of-type(4):before { content: "D:"; }
  td.Team:nth-of-type(5):before { content: "L:"; }
  td.Team:nth-of-type(6):before { content: "NR:"; }
  td.Team:nth-of-type(7):before { content: "Pts:"; }
  }
</style>
<table>
  <thead>
    <tr>
      <th><%=I18n.t('.teams.name')%></th>
      <th><%=I18n.t('.teams.played')%></th>
      <th><%=I18n.t('.teams.won')%></th>
      <th><%=I18n.t('.teams.drawn')%></th>
      <th><%=I18n.t('.teams.lost')%></th>
      <th><%=I18n.t('.teams.no_result')%></th>
      <th><%=I18n.t('.teams.pts')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td class="Team"><%= @team.name %></td>
      <td class="Team"><%= @team.played %></td>
      <td class="Team"><%= @team.won %></td>
      <td class="Team"><%= @team.drawn %></td>
      <td class="Team"><%= @team.lost %></td>
      <td class="Team"><%= @team.noresult %></td>
      <td class="Team"><%= @team.score %></td>
    </tr>
  </tbody>
</table>
<%#Show all players in the current team:%>
<%= render 'shared/playerList' %>

<p style="text-align:center"><%= link_to I18n.t('.teams.players.new'), new_team_player_path(@team) %></p>
<%= link_to I18n.t('edit'), edit_team_path(@team) %> |
<%= link_to I18n.t('back'), teams_path %>
