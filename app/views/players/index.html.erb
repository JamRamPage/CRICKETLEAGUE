<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Dob</th>
      <th>Team</th>
      <th>Role</th>
      <th>Battinghand</th>
      <th>Bowlingstyle</th>
      <th>Domesticteam</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.DOB %></td>
        <td><%= player.team.name %></td>
        <td><%= player.role %></td>
        <td><%= player.battinghand %></td>
        <td><%= player.bowlingstyle %></td>
        <td><%= player.domesticteam %></td>
        <td><%= link_to 'Show', team_player_path(player.team, player) %></td>
        <td><%= link_to 'Edit', edit_team_player_path(player.team, player) %></td>
        <td><%= link_to 'Destroy', team_player_path(player.team, player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
